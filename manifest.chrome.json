{
  "manifest_version": 3,
  "name": "Rohlik Enhanced",
  "version": "1.6.0",
  "description": "Displays Nutri-Score for grocery products on rohlik.cz",
  "content_scripts": [{
    "matches": ["https://www.rohlik.cz/*"],
    "js": ["content.js"]
  }],
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.rohlik.cz/*"
  ],
  "icons": {
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
