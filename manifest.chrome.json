{
  "manifest_version": 3,
  "name": "Rohlik Enhanced",
  "version": "1.1.0",
  "description": "Displays Nutri-Score for grocery products on rohlik.cz",
  "content_scripts": [{
    "matches": ["https://www.rohlik.cz/*"],
    "js": ["content.js"]
  }],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.rohlik.cz/*"
  ]
}
