{
  "manifest_version": 3,
  "name": "Rohlik Enhanced",
  "description": "Displays Nutri-Score for grocery products",
  "version": "1.1.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "{3d2f5053-2fb6-4107-bdc4-7bf409cce918}"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.rohlik.cz/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "storage",
    "activeTab"
  ]
}
