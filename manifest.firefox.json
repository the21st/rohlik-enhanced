{
  "manifest_version": 3,
  "name": "Rohlik Enhanced",
  "description": "Displays Nutri-Score for grocery products on rohlik.cz",
  "version": "1.7.1",
  "browser_specific_settings": {
    "gecko": {
      "id": "{3d2f5053-2fb6-4107-bdc4-7bf409cce918}"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.rohlik.cz/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab"
  ],
  "icons": {
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
